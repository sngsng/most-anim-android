<layout>

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="사용 예정쿠폰"
            android:textColor="@color/colorWarmGrey"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coupon_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack"
                android:fontFamily="@font/notosans_medium"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="무료세차권"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/goods_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_border_black"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_medium"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:text="CLUB MOST"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/img_info_50gray_12_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/notosans_regular"
                android:text="유효기간 기준으로 쿠폰 자동 선택"
                android:textColor="@color/colorWarmGrey"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>
</layout>

